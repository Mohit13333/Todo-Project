{
  "version": 2,
  "builds": [
    {
      "src": "dist/**",
      "use": "@vercel/static"
    },
    {
      "src": "server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/auth/login",
      "dest": "server.js"
    },
    {
      "src": "/api/auth/register",
      "dest": "server.js"
    },
    {
      "src": "/api/auth/user",
      "dest": "server.js"
    },
    {
      "src": "/api/admin/contact",
      "dest": "server.js"
    },
    {
      "src": "/api/todo/(.*)",
      "dest": "server.js"
    },
    {
      "src": "/(.*)",
      "dest": "server.js"
    },
    {
      "src": "/",
      "dest": "dist/index.html"
    },
    {
      "src": "/(.+)",
      "dest": "dist/$1"
    },
    {
      "src": "/(.*)",
      "dest": "dist/$1"
    }
  ]
}
